<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4><%= data.name%></h4>
				</div>
				<div class="panel-body">
          <ul id="tabs" class="nav nav-tabs" data-tabs="tabs">
            <li class="active"><a href="#about" data-toggle="tab">About</a></li>
            <li><a href="#collaborators" data-toggle="tab">Collaborators</a></li>
            <li><a href="#backlog" data-toggle="tab">Backlog</a></li>
          </ul>

          <div class="tab-content">
            <div id="about" class="tab-pane active">
              <h4>About:</h4>
              <p><%= data.description %></p>
              <a class="btn btn-primary" href="/projects/<%= data.id%>/edit">Edit Project</a>

            </div>

            <div id="collaborators" class="tab-pane">
              <% if(data.collaborators && data.collaborators.length > 0) {%>
              <h4>Collaborators:</h4>
                  <ul class="user-list">
                    <%data.collaborators.forEach(function(coll){ %>
                    <li class="user-list-item">

                      <div class="thumb">
                        <a href="" class="thumbnail-small">
                          <img src="http://balgar.bg/wp-content/uploads/balgar_fb_image.jpg"/>
                        </a>
                      </div>
                      <div class="info">
                        <a href="/users/<%= coll.id%>"><%= coll.name + ' ' + coll.surname%></a>
                      </div>
                      <div class="actions">
                        <ul class="actions-list">
                          <li class="actions-list-item">
                            <a href="/projects/<%= data.id%>/remove_user/<%= coll.id %>">
                              <i class="glyphicon glyphicon-remove"></i>
                            </a>
                          </li>
                        </ul>
                      </div>
                    </li>
                    <%})%>
                  </ul>
                  <%}%>
                <a class="btn btn-success" href="/projects/<%= data.id%>/add_user">Add Collaborator</a>
            </div>

            <div id="backlog" class="tab-pane">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Priority</th>
                  </tr>
                </thead>
                <tbody>
                <% data.stories.forEach(function(story){ %>
                    <tr>
                      <td><a href="/stories/<%= story.id%>"><%= story.name %></a></td>
                      <td><%= story.status.replace('_', ' ').toUpperCase() %></td>
                      <td><%= story.priority %></td>
                    </tr>
                <%})%>
                </tbody>
              </table>
              <a class="btn btn-success" href="/stories/add?project=<%=data.id%>">Add User Story</a>
            </div>
          </div>
				</div>
			</div>
		</div>
	</div>
</div>

<script>

</script>
